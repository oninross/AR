extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'
  - var isNewARjs = true

block content
  style.
    .arjs-loader {
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.8);
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .arjs-loader div {
      text-align: center;
      font-size: 1.25em;
      color: white;
    }

  .arjs-loader
    div Loading, please wait...

  a-scene(vr-mode-ui='enabled: false;', renderer='logarithmicDepthBuffer: true;', embedded='', arjs='trackingMethod: best; sourceType: webcam;debugUIEnabled: false;')
    // we use cors proxy to avoid cross-origin problems
    a-nft(type='nft', url='https://arjs-cors-proxy.herokuapp.com/https://raw.githack.com/AR-js-org/AR.js/master/aframe/examples/image-tracking/nft/trex/trex-image/trex', smooth='true', smoothcount='10', smoothtolerance='.01', smooththreshold='5')
      a-entity(scale='0.3 0.3 0.3')
        a-box(position='-1 0.5 1', rotation='0 45 0', color='#4CC3D9', shadow='')
        a-sphere(position='0 1.25 -1', radius='1.25', color='#EF2D5E', shadow='')
        a-cylinder(position='1 0.75 1', radius='0.5', height='1.5', color='#FFC65D', shadow='')
        a-plane(position='0 0 0', rotation='-90 0 0', width='4', height='4', color='#7BC8A4', shadow='')
    a-entity(camera='')
